<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <p>Welcome</p>
    <form class="navbar-form form-signin" method="post" style="" action="/login">
      <div><input name="username"    type="text"    class="form-control" placeholder="Username" required autofocus></div>
      <!-- <div><input name="email"    type="text"    class="form-control" placeholder="Email" required autofocus></div> -->
      <div><input name="password" type="password" class="form-control" placeholder="Пароль" ></div>
      <div><button type="submit">Войти</button></div>
      </div>
    </form>
    <% if (loginError) { %>
      <h2><%= loginError %></h2>
    <% } %>

    <form class="navbar-form form-signin" method="post" style="" action="/register">
      <div><input name="username"    type="text"    class="form-control" placeholder="Username" required autofocus></div>
      <div><input name="email"    type="text"    class="form-control" placeholder="Email" required autofocus></div>
      <div><input name="password1" type="password" class="form-control" placeholder="Пароль" ></div>
      <div><input name="password2" type="password" class="form-control" placeholder="Пароль" ></div>
      <div><button type="submit">Зарегистрироваться</button></div>
      </div>
    </form>
    <% if (regError) { %>
      <h2><%= regError %></h2>
    <% } %>
  </body>
</html>
